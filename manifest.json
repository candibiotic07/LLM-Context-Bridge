{
  "name": "LLM Context Bridge",
  "description": "Copy LLM conversations to clipboard for context switching",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": ["clipboardWrite", "scripting", "activeTab"],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}